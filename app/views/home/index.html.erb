<h1>Films</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Release date</th>
      <th>Director</th>
      <th>Producer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @allFilms.each do |movie| %>
    <tr>
      <td><%= movie.title %></td>
      <td><%= movie.release_date %></td>
      <td><%= movie.director %></td>
      <td>
        <ul>
          <% movie.producers.each do |producer| %>
            <li><%= "#{producer}" %></li>
          <% end %>
        </ul>
      </td>
      <td><%= link_to 'Show', show_film_path(id: movie.id) %></td>
    </tr>
    <% end %>
  </tbody>
</table>
